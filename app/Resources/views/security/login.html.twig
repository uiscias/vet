{% extends 'baselogin.html.twig' %}

{% block body %}

    <h1 class="white">Connectez vous !</h1>

{# app/Resources/views/security/login.html.twig #}
{# ... you will probably extend your base template, like base.html.twig #}

{% if error %}
<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('login') }}" method="post">
    <label for="username">Username:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" style="color:#777" />
    <br />

    <label for="password">Password:&nbsp;</label>
    <input type="password" id="password" name="_password" style="color:#777" />
    <br />

    {#
    If you want to control the URL the user
    is redirected to on success (more details below)
    <input type="hidden" name="_target_path" value="/account" />
    #}

    <button type="submit" class="btn btn-appoint">login</button>
</form>

{% endblock %}
