{% extends 'base.html.twig' %}

{% block body %}
    <h1>Animal</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animal.id }}</td>
            </tr>
            <tr>
                <th>Species</th>
                <td>{{ animal.species }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ animal.year }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ animal.name }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ animal.notes }}</td>
            </tr>
            <tr>
                <th>Isalive</th>
                <td>{% if animal.isAlive %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Vaccination</th>
                <td>{{ animal.vaccination }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('animal_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('animal_edit', { 'id': animal.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
